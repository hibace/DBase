@model PagedList.IPagedList <Dota2StatsClient.Models.Maintemp>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<br />
  
<div class="form-horizontal">  
  
    <hr />  
    <h2>All match info</h2>
    <div class="form-group">  
  
        

        <table class="table table-hover table-striped table-bordered table-condensed" @*style="width:400px"*@>  
            <tr>  
                <th>
                    Player Id
                </th>
                <th>  
                    Hero Id
                </th>  
                <th>
                   Match Id
                </th> 
                <th>
                    Action
                </th> 
            </tr>  
  
            @foreach (var item in Model)
            {
                <tr>  
                    <td>  
                        @*@Html.DisplayFor(modelItem => item.IdPLayer)*@  
                        
                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.IdPLayer).ToString(), "Details" + "/" + @Html.DisplayFor(modelItem => item.IdPLayer), "Player")
                    </td>  
                    <td>  
                        @*@Html.DisplayFor(modelItem => item.IdHero)*@  
                        
                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.IdHero).ToString(), "Details" + "/" + @Html.DisplayFor(modelItem => item.IdHero), "Hero")
                    </td>  
                    <td>
                        @*@Html.DisplayFor(modelItem => item.IdMatch)*@
                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.IdMatch).ToString(), "Details" + "/" + @Html.DisplayFor(modelItem => item.IdMatch), "Match")
                    
                    </td>  
                    <td>  
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) 
                    </td>
                </tr>  
            }  
  
        </table>  
        
        
        <br />
            Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            
</div>  
</div>  