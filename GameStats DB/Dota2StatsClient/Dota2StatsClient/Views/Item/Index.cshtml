@model PagedList.IPagedList <Dota2StatsClient.Models.Item>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<br />
  
<div class="form-horizontal">  
  
    <hr /> 
    <h2>Items</h2>
    <div class="form-group">  
  
        <table class="table table-hover table-striped table-bordered table-condensed">  
            <tr>  
                <th>
                    Pic
                </th>
                <th>  
                    Name
                </th>  
                <th>
                   Type
                </th>  
                <th>
                    Action
                </th> 
            </tr>  
  
            @foreach (var item in Model)
            {
                <tr>  
                    <td>
                        <img src="@Url.Content("~/Content/Images/Item/" + @Html.DisplayFor(modelItem => item.Name) + ".jpg")" class="img-rounded" width="66"/>
                    </td>
                    <td>  
                        @Html.DisplayFor(modelItem => item.Name)  
                        
                    </td>  
                    <td>  
                        @Html.DisplayFor(modelItem => item.Type)  
                    </td>  
                    <td>  @Html.ActionLink("Details", "Details", new { id=item.Id }) 
                    </td>
                </tr>  
            }  
  
        </table>  
        
        
        <br />
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>  
</div>  